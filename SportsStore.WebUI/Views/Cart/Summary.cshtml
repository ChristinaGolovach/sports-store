@model SportsStore.Domain.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Your cart:</b>
        @Model.CartLines.Sum(x =>x.Quantity) item(s)
        @Model.CalculateTotalSum().ToString("c")
    </span>
    @Html.ActionLink("Checkout","Index", "Cart", new { returnUrl = Request.Url.PathAndQuery}, null)
</div>
